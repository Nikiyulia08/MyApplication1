<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_bck4"
        />

    <TextView
        android:id="@+id/txt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_to="@+id/btn_bck4"
        android:fontFamily="@font/interbold"
        android:text="Masuk"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="135dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt11"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/ly5">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape3"
            android:hint="Masukkan email anda"
            android:textColorHint="#A1A8B0"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edtemaillogin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape3"
            android:hint="Masukkan password anda"
            android:textColorHint="#A1A8B0"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edtpasswordlogin"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly5"
        android:layout_centerHorizontal="true"
        android:text="Masuk"
        android:fontFamily="@font/interbold"
        android:textColor="@color/white"
        android:width="350dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape1"
        android:id="@+id/btn_masuk"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_masuk"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:id="@+id/ly4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak punya akun?"
            android:fontFamily="@font/interreguler"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/txt12"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar disini"
            android:textColor="@color/primaryColor"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            android:id="@+id/txt13"
            />

    </LinearLayout>

</RelativeLayout>